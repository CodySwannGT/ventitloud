<%- model_class = Share -%>

<%= content_for :breadcrumb do -%>
  <div class="span12">
    <ul class="breadcrumb">
      <li><%= link_to "Vents", [:vents] %><span class="divider">/</span></li>
      <% if resource.new_record? %>
        <li class="active">New <%= resource.class.name %></li>
      <% else %>
        <li><%= link_to resource, resource %><span class="divider">/</span></li>
        <li class="active">Edit</li>
      <% end %>
    </ul>
  </div>
<% end -%>

<div class="page-header">
  <h1>Share <%= parent %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vent_id) %>:</strong></dt>
  <dd><%= @share.vent_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @share.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:network) %>:</strong></dt>
  <dd><%= @share.network %></dd>
  <dt><strong><%= model_class.human_attribute_name(:with) %>:</strong></dt>
  <dd><%= @share.with %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              shares_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_share_path(@share), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              share_path(@share),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
