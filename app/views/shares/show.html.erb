<%- model_class = Share -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vent_id) %>:</strong></dt>
  <dd><%= @share.vent_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @share.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:network) %>:</strong></dt>
  <dd><%= @share.network %></dd>
  <dt><strong><%= model_class.human_attribute_name(:with) %>:</strong></dt>
  <dd><%= @share.with %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              shares_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_share_path(@share), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              share_path(@share),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
