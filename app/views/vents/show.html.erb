<%- model_class = Vent -%>

<%= content_for :breadcrumb do -%>
  <div class="span9">
    <ul class="breadcrumb">
      <li><%= link_to "Vents", [:vents] %><span class="divider">/</span></li>
      <li class="active"><%= resource.to_s.truncate(20) %></li>
    </ul>
  </div>
  <div class="span3 btn-group">
    <%= link_to "Share", new_vent_share_path(resource), class: "btn-warning btn" if can? :create, Share %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                vent_path(@vent),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-warning' if can? :destroy, resource %>
  </div>
<% end -%>

<blockquote>
  <span class="label label-inverse pull-right"><%= resource.mood %></span>
  <%= simple_format resource.text %>
  <% if resource.public? %>
    <small>By <%= resource.user %></small>
  <% end %>
</blockquote>
